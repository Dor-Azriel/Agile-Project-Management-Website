pipeline {
    agent { docker { image 'python:3.7' } }
    triggers {
      githubPush()
  }

    stages {
        stage('Build') {
            steps {
                sh 'python --version'
            }

        }
        stage('setup'){
          steps{
            withEnv(["HOME=${env.WORKSPACE}"]){

            dir('jenkins'){
            sh 'python -m pip install -r requirements.txt'
            }
            echo 'hello'
          }
          }
        }

    }

}
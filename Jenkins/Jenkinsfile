pipeline {
    agent { docker { image 'python:3.7' } }
    triggers {
      githubPush()
  }

    stages {
        stage('Build') {
            steps {
                sh 'python --version'
            }

        }
        stage('setup'){
          steps{
            sh 'virtualenv myEnv -p python3'
            sh 'source myEnv/bin/activate'
            sh 'python -m pip install -r requirements.txt'
            echo 'hello'
          }

        }

    }

}